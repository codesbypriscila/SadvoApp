@model SADVO.Application.ViewModels.AlianzaPoliticaViewModel
@{
    ViewData["Title"] = "Nueva Solicitud de Alianza";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mt-10">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Nueva Solicitud de Alianza</h2>

    <form asp-action="Create" method="post" class="space-y-6">
        <div>
            <label asp-for="PartidoReceptorId" class="block text-sm font-medium text-gray-700">Partido Receptor *</label>
            <select asp-for="PartidoReceptorId" asp-items="Model.PartidosDisponibles"
                class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
                <option value="">Seleccione un partido</option>
            </select>
            <span asp-validation-for="PartidoReceptorId" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
            <a asp-action="Index"
                class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg shadow-sm transition-all duration-200">
                Volver
            </a>
            <button type="submit"
                class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                Crear Solicitud
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
