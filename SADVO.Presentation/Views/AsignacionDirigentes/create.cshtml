@model SADVO.Application.ViewModels.AsignacionDirigenteViewModel

@{
    ViewData["Title"] = "Nueva Asignación de Dirigente Político";
}

<div class="min-h-screen bg-gray-50 px-3 sm:px-4 lg:px-8 pt-8">
    <div class="max-w-2xl mx-auto">
        
        <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <div class="mb-8">
                <div class="flex items-center mb-4">

                    <div>
                        <h1 class="text-3xl font-bold text-gray-900">Nueva Asignación</h1>
                        <p class="text-gray-600 mt-1">Asigna un dirigente político a un partido</p>
                    </div>
                </div>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="mb-6 bg-red-50 border-l-4 border-red-400 p-4 rounded-lg shadow-sm">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700 font-medium">Por favor corrige los errores en el formulario</p>
                        </div>
                    </div>
                </div>
            }

            <form asp-action="Create" method="post" class="space-y-6">
                <div>
                    <label asp-for="UsuarioId" class="block text-sm font-medium text-gray-700 mb-2">
                        <div class="flex items-center">
                            <svg class="w-4 h-4 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            Dirigente Político
                        </div>
                    </label>
                    <select asp-for="UsuarioId" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 bg-white">
                        <option value="">Seleccione un dirigente político...</option>
                        @if (ViewBag.Usuarios != null)
                        {
                            @foreach (var usuario in ViewBag.Usuarios)
                            {
                                <option value="@usuario.Id">@usuario.Username</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="UsuarioId" class="text-red-500 text-sm mt-1 block"></span>
                </div>

                <div>
                    <label asp-for="PartidoPoliticoId" class="block text-sm font-medium text-gray-700 mb-2">
                        <div class="flex items-center">
                            <svg class="w-4 h-4 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2h4a1 1 0 110 2h-1v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6H3a1 1 0 110-2h4zM6 6v12h12V6H6z"></path>
                            </svg>
                            Partido Político
                        </div>
                    </label>
                    <select asp-for="PartidoPoliticoId" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 bg-white">
                        <option value="">Seleccione un partido político...</option>
                        @if (ViewBag.Partidos != null)
                        {
                            @foreach (var partido in ViewBag.Partidos)
                            {
                                <option value="@partido.Id">@partido.Siglas - @partido.Nombre</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="PartidoPoliticoId" class="text-red-500 text-sm mt-1 block"></span>


                  
                </div>

                <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
                    <a asp-action="Index" 
                       class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold rounded-lg shadow-md hover:shadow-lg transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Cancelar
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Crear Asignación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}