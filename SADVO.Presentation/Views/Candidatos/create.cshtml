@model SADVO.Application.ViewModels.CandidatoViewModel

@{
    ViewData["Title"] = "Crear Candidato";
}

<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mt-10">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Nuevo Candidato</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="space-y-6">
        <div>
            <label asp-for="Nombre" class="block text-sm font-medium text-gray-700">Nombre *</label>
            <input asp-for="Nombre"
                class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Apellido" class="block text-sm font-medium text-gray-700">Apellido *</label>
            <input asp-for="Apellido"
                class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="FotoFile" class="block text-sm font-medium text-gray-700">Foto del Candidato *</label>
            <input asp-for="FotoFile" type="file" accept="image/*"
                class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="FotoFile" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-end gap-4 pt-6 border-t border-gray-200">
            <a asp-action="Index"
                class="px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg shadow-sm transition-all duration-200">
                Volver
            </a>
            <button type="submit"
                class="px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-medium rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                Crear Candidato
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
