@model SADVO.Application.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mt-10">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Editar Usuario</h2>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Nombre" class="block text-sm font-medium text-gray-700">Nombre</label>
            <input asp-for="Nombre" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            <span asp-validation-for="Nombre" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Apellido" class="block text-sm font-medium text-gray-700">Apellido</label>
            <input asp-for="Apellido" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            <span asp-validation-for="Apellido" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
            <input asp-for="Email" type="email" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Username" class="block text-sm font-medium text-gray-700">Nombre de Usuario</label>
            <input asp-for="Username" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="RolId" class="block text-sm font-medium text-gray-700">Rol</label>
            <select asp-for="RolId" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500">
                @foreach (var rol in Model.RolesDisponibles)
                {
                    <option value="@rol.Id" selected="@(rol.Id == Model.RolId)">@rol.Nombre</option>
                }
            </select>
            <span asp-validation-for="RolId" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700">Contraseña <span class="text-gray-500 text-xs">(Dejar en blanco para mantener la actual)</span></label>
            <input asp-for="Password" type="password" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirmar Contraseña</label>
            <input asp-for="ConfirmPassword" type="password" class="mt-2 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-orange-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-end gap-4">
            <a asp-action="Index" class="px-5 py-2 bg-gray-200 rounded-md hover:bg-gray-300 transition-colors duration-200">Cancelar</a>
            <button type="submit" class="px-5 py-2 bg-orange-600 text-white rounded-md hover:bg-orange-700 transition-colors duration-200">Guardar</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}