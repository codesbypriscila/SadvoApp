@model SADVO.Application.ViewModels.EleccionViewModel
@{
    ViewData["Title"] = "Finalizar Elección";
}
<div class="max-w-xl mx-auto bg-white rounded-2xl shadow-xl p-8 border border-gray-100 mt-10">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Finalizar Elección</h2>
    <p class="mb-4 text-gray-700">¿Estás seguro que deseas finalizar la elección <strong>@Model.Nombre</strong>?</p>

    <form asp-action="Finalizar" method="post" class="flex justify-end gap-4">
        <input type="hidden" name="id" value="@Model.Id" />
        <a asp-action="Index" class="px-5 py-2 bg-gray-200 rounded-md hover:bg-gray-300 transition">Cancelar</a>
        <button type="submit" class="px-5 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition">Finalizar</button>
    </form>
</div>